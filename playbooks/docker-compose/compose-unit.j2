[Unit]
Description=test docker compose unit
After=docker.service

[Service]
WorkingDirectory={{ item.root_dir }}
ExecStart=/usr/local/bin/docker-compose -f {{ item.root_dir }}/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose -f {{ item.root_dir }}/docker-compose.yml down

[Install]
WantedBy=docker.service